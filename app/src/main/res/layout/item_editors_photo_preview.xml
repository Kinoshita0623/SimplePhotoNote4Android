<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="fileListener"
            type="ie2a_2200078.eventwork05.viewmodels.FileListener" />
        <variable
            name="file"
            type="ie2a_2200078.eventwork05.entities.GalleryFile" />
    </data>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="8dp"

            setSimpleImageUri="@{file.path}"
            tools:srcCompat="@mipmap/ic_launcher_round"
            android:onClick="@{ ()-> fileListener.onSelect(file) }"
            tools:ignore="ContentDescription" />
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:checked="true"
            android:onClick="@{()-> fileListener.onDetach(file) }"
            />
    </FrameLayout>

</layout>